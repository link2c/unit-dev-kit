{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowJs": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "examples",
    "packages",
    "dist"
  ]
}